{
    "manifest_version": 3,
    "name": "Indian Time to UTC Converter",
    "version": "1.0",
    "description": "Converts current Indian time to UTC.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  